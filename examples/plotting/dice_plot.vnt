[assume a (tag 0 1 (normal (uniform_discrete 1 6) 1))]
[assume b (tag 0 2 (normal (uniform_discrete 1 6) 1))]
[assume c (tag 0 3 (normal (uniform_discrete 1 6) 1))]
[observe (tag 0 4 (normal (+ a b c) 0.2)) 7]
[infer
 (let ((d (empty)))
   (do (repeat 100
        (do (mh 0 one 1)
            (into d (run (collect a b c (+ a b c))))))
       (plotf_to_file
        (list "dice1" "dice2" "dice3")
        (list "p0d1d2" "p0d1dt" "c3")
        d)))]
