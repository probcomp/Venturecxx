[infer (resample 100)]

[assume x (uniform_continuous 0 1)]
[assume y (uniform_continuous 0 1)]

[assume dist (lambda (x1 y1 x2 y2) (sqrt (+ (pow (- x1 x2) 2) (pow (- y2 y2) 2))))]

[assume energy (lambda (x y) (+ (dist x y -1 -1) (dist x y 0 0)))]

[observe (bernoulli (exp (* -1 (energy x y)))) 1]

[predict (dist x y 0 0)]

[infer (do
  (mh default one 1)
  (plotf_to_file "bimodal" "p0d1dr" (run (collect x y))))]
